{
  "manifest_version": 2,
  "name": "English to Chinese Translator",
  "version": "1.0",
  "description": "Translate English websites into Chinese with a local dictionary.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "My Extension",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "https://api.example.com/*",
    "activeTab"
  ]
}